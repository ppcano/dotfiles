
# Adjust $PATH
if [ -d ~/.scripts ] ; then
  export PATH=$HOME/.scripts:$PATH
fi

if [ -d /usr/local/share/android-sdk-mac_x86 ] ; then
  export PATH=$PATH:/usr/local/share/android-sdk-mac_x86/tools
  export PATH=$PATH:/usr/local/share/android-sdk-mac_x86/platform-tools
fi

if [ -d /usr/local/git/bin ] ; then
  export PATH=/usr/local/git/bin/:$PATH
fi

if [ -d ~/.npm-global/bin ] ; then
  export PATH=$HOME/.npm-global/bin:$PATH
fi

if [ -d ~/dev/go ] ; then
  export GOPATH=$HOME/dev/go
  export PATH=$PATH:$GOPATH/bin
fi


